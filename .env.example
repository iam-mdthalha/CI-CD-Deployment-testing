# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=ecommerce-frontend
SERVICE_VERSION=1.0.0

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
DOCKERHUB_USERNAME=jmdthalha
DOCKER_IMAGE_NAME=ecommerce-frontend
ACTIVE_ENVIRONMENT=blue
BLUE_PORT=3001
GREEN_PORT=3002

# =============================================================================
# AWS SETTINGS
# =============================================================================
AWS_REGION=ap-south-1
EC2_INSTANCE_ID=<REQUIRED_INSTANCE_ID>

# =============================================================================
# DOMAIN SETTINGS (FUTURE USE)
# =============================================================================
DOMAIN=localhost

# =============================================================================
# NOTIFICATION SETTINGS
